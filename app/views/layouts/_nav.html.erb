<nav class="rm-nav navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <strong><a class="brand-name" href="<%= movies_path %>">Rotten Mangoes</a></strong>
    </div>
    <ul class="nav navbar-nav">
      <% if current_user %>
        <li>
          <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.fullname %>
          <span class="caret"></span></a>
          <%= render 'layouts/dropdown_options' %>
        </li>
      <% else %>
        <%= link_to "Sign Up", new_user_path, class: "btn btn-warning navbar-btn login" %>
        <%= form_tag session_path, class:"navbar-form navbar-left" do %>
          <div class="form-group">
            <%= text_field_tag :email, nil, class: "form-control login", placeholder: "email" %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, nil, class: "form-control login", placeholder: "password" %> 
          </div>
          <div class="form-group">
            <%= submit_tag "Login", class:"btn btn-warning login" %>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>
</nav>