<%= link_to "Back to movie", movie_path(@movie) %>

<h2>Write a review for <em><%= @movie.title %></em></h2>

<%= form_for([@movie, @review]) do |f| %>

  <% if @review.errors.any? %>
      <%= pluralize(@review.errors.count, "error") %> prevented the review from being submitted:
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

  <div>
    <%= f.label :text %>
    <br>
    <%= f.text_area :text %>
  </div>
  <div>
    <%= f.label :rating_out_of_ten %>
    <br>
    <%= f.number_field :rating_out_of_ten %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>

<% end %>