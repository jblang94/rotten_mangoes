<div class="container text-center">
  <div class="row">
    <h1>Login</h1>
  </div>

  <div class="row">
    <%= form_tag session_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <br>
        <%= text_field_tag :email %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <br>
        <%= password_field_tag :password %>
      </div>
      <div class="form-group">
        <%= submit_tag "Login", class:"btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>