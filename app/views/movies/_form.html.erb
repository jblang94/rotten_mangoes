<%= form_for @movie do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being saved:
      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </div>
  <div class="form-group">
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>
  <div class="form-group">
    <%= f.label :runtime_in_minutes %><br>
    <%= f.number_field :runtime_in_minutes %>
  </div>
  <div class="form-group">
    <%= f.label :poster_image_url %><br>
    <%= f.text_field :poster_image_url %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-default" %> 
  </div>
<% end %>