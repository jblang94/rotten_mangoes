<div class="column">
<%= form_for @movie, html: { multipart: true } do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being saved:
      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date %>
  </div>
  <div class="form-group">
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>
  <div class="form-group">
    <%= f.label :runtime_in_minutes %><br>
    <%= f.number_field :runtime_in_minutes %>
  </div>
  <div class="form-group">
    <%= f.label :poster %>
    <%= f.file_field :poster, class: "btn btn-default btn-file poster-file-upload" %>
  </div>
  <div class="form-group">
    <%= f.label :remote_poster_url, "Poster URL" %><br />
    <%= f.text_field :remote_poster_url %>
  </div>
  <% if f.object.poster? %>
    <div class="form-group">
      <%= f.label :remove_poster, "Remove Poster" %>
      <%= f.check_box :remove_poster %>
      <br>
      <%= image_tag f.object.poster.thumb.url %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-default" %> 
  </div>

<% end %>
</div>