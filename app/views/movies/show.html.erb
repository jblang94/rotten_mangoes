<%= link_to "Back to all movies", movies_path %><br/>

<div class="container">
  <div class="row">
    <div class="column text-center">
      <%= link_to image_tag(@movie.poster_image_url), movie_path(@movie), class:"img-thumbnail img-responsive" %>
      <h2><%= @movie.title %> (<%= link_to "edit", edit_movie_path(@movie) %>, <%= link_to "delete", movie_path(@movie), method: :delete, data: {confirm: "You sure?"} %>)</h2>
      <h3><%= formatted_date(@movie.release_date) %></h3>
      <h4>Dir. <%= @movie.director %> | <%= @movie.runtime_in_minutes %> minutes</h4>
      <p><%= @movie.description %></p>
    </div>
    <div class="column">
      <h3>Reviews of <em><%= @movie.title %></em></h3>
      <% if current_user %>
        <% @movie.reviews.each do |review| %>
          <p><%= review.text %></p>
          <p><%= review.rating_out_of_ten %>/10</p>
          <small>- <%= review.user.fullname %></small>
        <% end %>
        <p><%= link_to "Write a review!", new_movie_review_path(@movie) %></p>
      <% else %>
        <p>Please <%= link_to "log in", new_session_path %> to see reviews and to add your own.</p>
      <% end %>
    </div>
  </div>
</div>