<div class="container">
  <div class="row">
    <h1>List of All Users</h1>
    <%= paginate @users %>
  </div>

  <% @users.each do |user| %>
    <div class="row">
      <h2><%= user.fullname %></h2>
      <p><%= user.email %></p>
      <%= link_to "View Details", admin_user_path(user) %>
      <br>
      <%= link_to "Edit User", edit_admin_user_path(user) %>
      <br>
      <%= link_to "Delete User", admin_user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete #{user.fullname}?"} %>
    </div>
  <% end %>
</div>